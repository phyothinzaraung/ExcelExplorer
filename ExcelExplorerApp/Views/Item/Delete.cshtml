@model ExcelExplorerApp.Models.Item

@{
    ViewData["Title"] = "Delete Item";
}

<div class="container mt-4">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Delete Item</h3>
        </div>
        <div class="card-body">
            <p class="fs-5 text-danger"><strong>Are you sure you want to delete this item?</strong></p>

            <ul class="list-group mb-3">
                <li class="list-group-item"><strong>Title:</strong> @Model.Title</li>
                <li class="list-group-item"><strong>Department:</strong> @Model.Dept</li>
                <li class="list-group-item"><strong>Division:</strong> @Model.Division</li>
                <li class="list-group-item"><strong>Badge Type:</strong> @Model.BadgeType</li>
            </ul>

            <form asp-action="Delete" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Index", "Item")" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
